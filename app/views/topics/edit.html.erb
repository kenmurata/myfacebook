<div class="container">
  <div class="row">
    <div class="col-sm-offset-1 col-md-offset-2 col-lg-offset-3 col-sm-10 col-md-8 col-lg-6">
      <h1>Topicを編集する</h1>
      <!-- エラーがあった場合の表示 -->
      <% if @topic.errors.any? %>
        <h2><%= @topic.errors.count %>件のエラーがあります。</h2>
        <ul>
          <% @topic.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_for(@topic, url: topic_path(@topic.id)) do |f| %>
        <table class='table table-hover'>
          <tr><td>
              <%= f.label :content %>
              <%= f.text_area :content, :class => 'form-control'  %>
          </td></tr>
        </table>
        <%= f.submit '投稿', :class => 'btn btn-primary' %>
        <%= link_to '戻る', :back , :class => 'btn btn-default' %>
      <% end %>
    </div>
  </div>
</div>