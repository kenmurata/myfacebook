<div class="container"><div class="row"><div class="col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
<h1>Topicの新規投稿</h1>
<%= form_for(@topic, url: topics_path, method: :post) do |f| %>
  <!-- エラーがあった場合の表示 -->
  <% if @topic.errors.any? %>
    <h2><%= @topic.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
  
  <!-- 入力フォーム -->
  <%= f.label :"本文" %>
  <%= f.text_area :content, class:"form-control", placeholder: '本文'  %>
  <br>
  <%= f.submit '投稿', :class => "btn btn-primary" %>
  <%= link_to '戻る',:back, :class => 'btn btn-default' %>
<% end %>
</div></div></div>