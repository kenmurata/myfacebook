<h1>Topicの新規投稿</h1>
<table class='table table-hover'>
    <%= form_for(@topic, url: topics_path) do |f| %>
        <tr><td>
            <%= f.label :title %>
            <%= f.text_field :title %>
        </td></tr>
        <tr><td>
            <%= f.label :content %>
            <%= f.text_field :content %>
        </td></tr>
    </table>
<%= f.submit '投稿' %>
<% end %>