<div class="container"><div class="row">
  <div class="col-sm-12 col-md-10 col-xl-8 col-md-offset-1 col-xl-offset-2"><h1>タイムライン</h1>
  <p class="flash"><%= notice %><%= alert %></p>
  <table class="table table-hover">
    <% @topics.each do |topic| %>
    <div class="row"><tr><td>
      <div class="col-sm-2 col-md-2 col-lg-1">
        <%= profile_img(topic.user) %>
      </div>
      <div class="col-sm-10 col-md-10 col-lg-11">
        <div class="row">
          <div class="col-sm-12">
            <strong><%= topic.user.name %>さんの投稿</strong>
          </div>
          <div class="col-sm-12">
            <%= topic.created_at.strftime('%Y年%m月%d日 %H:%M:%S') %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="topic_content">
          <br>
          <%= simple_format(h(topic.content)) %>
        </div>
      </div>
    </div>
    <div class="row">
      <br>
      <div class="col-xs-offset-3 col-xs-2"><%= link_to topic_path(topic.id) do %>
        <i class="fa fa-comment-o fa-1x"><%= topic.comments.count %></i>
      <% end %></div>
      <% if current_user.id == topic.user.id %>
        <div class="col-xs-2"><%= link_to '', edit_topic_path(topic.id), class: 'fa fa-pencil-square-o fa-lg' %></div>
        <div class="col-xs-2"><%= link_to '', topic_path(topic.id), class: 'fa fa-trash-o fa-lg', method: :delete, data: {confirm: '本当に削除してもよいですか？'} %></div>
      <% end %>
    </div>
    </td></tr>
    <% end %>
  </table>
</div></div></div>